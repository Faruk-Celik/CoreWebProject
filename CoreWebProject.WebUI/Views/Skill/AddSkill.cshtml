
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddSkill</h1>
<form class="form-control" method="post">
    @Html.Label("Skill Name")
    <input type="text" name="SkillName" class="form-control" />
    <br />
    <label>Skill Value</label>
    <input type="text" name="SkillValue" class="form-control" />
    <br />
    <button  class="btn btn-primary">Add Skill</button>
</form>

